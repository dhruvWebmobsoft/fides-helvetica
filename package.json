{
    "name": "fides-helvetica",
    "version": "1.1.0",
    "description": "Fides Helvetica Font",
    "license": "UNLICENSED",
    "private": true,
    "sass": "src/scss/fides-helvetica.scss",
    "style": "target/fides-helvetica.css",
    "scripts": {
        "build": "npm-run-all --parallel css && npm-run-all build-success",
        "cleanup": "rimraf target",
        "css": "npm-run-all --parallel css-lint* css-compile* --sequential css-prefix* css-minify*",
        "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true src/scss/fides-helvetica.scss target/fides-helvetica.css",
        "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output target/fides-helvetica.min.css target/fides-helvetica.css",
        "css-prefix": "postcss --config ./postcss.config.js --replace \"target/*.css\" \"!target/*.min.css\"",
        "css-lint": "stylelint --syntax scss \"src/scss/**/*.scss\"",
        "build-success": "echo \"Build successful âœ“\u0007",
        "webpack:dev": "npm run webpack-dev-server --config webpack/webpack.config.js --progress --inline --hot --profile --port=3060 --watch-content-base --color",
        "start": "npm run webpack:dev",
        "serve": "npm run start"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0-beta.54",
        "@babel/preset-env": "^7.0.0-beta.54",
        "babel-core": "^6.26.3",
        "babel-loader": "^8.0.0-beta",
        "browser-sync": "^2.24.5",
        "browser-sync-spa": "^1.0.3",
        "browser-sync-webpack-plugin": "^2.2.2",
        "clean-css-cli": "^4.1.10",
        "css-loader": "^1.0.0",
        "eslint": "^5.1.0",
        "eslint-loader": "^2.0.0",
        "file-loader": "^1.1.11",
        "html-webpack-plugin": "^3.2.0",
        "jquery": "^3.3.1",
        "node-sass": "^4.9.2",
        "npm-run-all": "^4.1.2",
        "postcss-cli": "^5.0.0",
        "postcss-replace": "^1.0.3",
        "rimraf": "^2.6.2",
        "sass-loader": "^7.0.3",
        "style-loader": "^0.21.0",
        "stylelint": "^9.1.1",
        "stylelint-config-recommended-scss": "^3.0.0",
        "stylelint-config-standard": "^18.0.0",
        "stylelint-order": "^0.8.0",
        "stylelint-scss": "^2.2.0",
        "stylish": "^1.0.0",
        "stylus": "^0.54.5",
        "webpack": "^4.16.1",
        "webpack-cli": "^3.0.8",
        "webpack-dev-server": "^3.1.4"
    }
}
