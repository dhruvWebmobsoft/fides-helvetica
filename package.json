{
  "name": "fides-helvetica",
  "version": "1.0.0",
  "description": "Fides Helvetica Font",
  "license": "UNLICENSED",
  "private": true,
   "scripts": {
        "css": "npm-run-all --parallel css-lint* css-compile* --sequential css-prefix* css-minify*",
        "css-compile": "node-sass --output-style expanded --source-map true --source-map-contents true scss/fides-helvetica.scss dist/css/fides-helvetica.css",
        "css-minify": "cleancss --level 1 --source-map --source-map-inline-sources --output dist/css/fides-helvetica.min.css dist/css/fides-helvetica.css",
        "css-prefix": "postcss --config build/postcss.config.js --replace \"dist/css/*.css\" \"!dist/css/*.min.css\"",
        "css-lint": "stylelint --syntax scss \"scss/**/*.scss\"",
        "dist": "npm-run-all --parallel css",
        "watch": "npm-run-all --parallel watch-css",
        "watch-css": "nodemon --ignore dist/ -e scss -x \"yarn css\""
    },
    "devDependencies": {
        "clean-css-cli": "^4.1.10",
        "node-sass": "^4.7.2",
        "nodemon": "^1.15.1",
        "npm-run-all": "^4.1.2",
        "postcss-cli": "^5.0.0",
        "stylelint": "^9.1.1",
        "stylelint-config-recommended-scss": "^3.0.0",
        "stylelint-config-standard": "^18.0.0",
        "stylelint-order": "^0.8.0",
        "stylelint-scss": "^2.2.0"
    }

}
